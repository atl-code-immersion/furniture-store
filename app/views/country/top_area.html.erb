<h2>Top 5: Largest States by Size</h2>

<table>
	<tr>
		<th>Name</th>
		<th>Capital</th>
		<th>Population</th>
		<th>Area</th>
	</tr>
	<% @states.each do |state| %>
		<tr>
			<td><%= state.name %></td>
			<td><%= state.capital %></td>
			<td><%= number_with_delimiter(state.population) %></td>
			<td><%= number_with_delimiter(state.area) %> mi&sup2;</td>
		</tr>
	<% end %>
</table>